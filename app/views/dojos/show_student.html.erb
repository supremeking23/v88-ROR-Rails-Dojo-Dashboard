<div class="container">
    <div class="row">
        <div class="col s12">
            <h1><%= @dojo.branch%> <small><%= @student.first_name%> <%= @student.last_name%></small></h1>
        </div>
    </div>



    <div class="row">
        <div class="col s12">
            <h3>Student Roster</h3>
            <table class="responsive-table striped">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>


                    </tr>
                </thead>

                <tbody>
                    <% @students.each do |student| %>
                    <tr>
                        <td><%= student.first_name%></td>
                        <td><%= student.last_name%></td>
                        <td><%= student.email%></td>

                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <a href="/dojos" class="btn">Home</a>
            <a href="/dojos/<%= @dojo.id%>/students/<%= @student.id%>/edit" class="btn btn-small">Edit</a>
            <!-- | <a href="/dojos/<%= @dojo.id%>/edit" class="btn">Edit</a> | <a href="/dojos" class="btn">Back</a> -->
        </div>
    </div>
</div>