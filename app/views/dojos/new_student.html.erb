<script>
	$(document).ready(function () {
		$("select").formSelect();
	});
</script>
<div class="container">
	<div class="row">
		<div class="col s12">
			<h2>New Student</h2>
		</div>
	</div>
	<div class="row">
		<form action="/dojos/<%= @dojo.id%>/students/create" method="POST" class="col s6">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
			<div class="row">
				<div class="input-field col s12">
					<input id="first_name" type="text" name="student[first_name]" class="validate" />
					<label for="first_name">First Name</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<input id="last_name" type="text" name="student[last_name]" class="validate" />
					<label for="last_name">Last Name</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<input id="email" type="text" name="student[email]" class="validate" />
					<label for="email">Email Address</label>
				</div>
			</div>
			<div class="input-field col s12">
				<select name="student[dojo_id]">
					<option value="" disabled selected>Choose your option</option>
				
<% @dojos.each do |dojo|%>
					<option value="<%= dojo.id %>" <%= dojo.id == @dojo.id ? 'selected' : "" %> > <%= dojo.branch %></option>
<% end %>
				</select>
				<label>Materialize Select</label>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<button class="btn waves-effect waves-light" type="submit" name="action">
						Create
						<i class="material-icons right">send</i>
					</button>
				</div>
			</div>
		</form>
	</div>

	<div class="row">
		<div class="col s12">
			<a href="/dojos" class="btn">Home</a> |
			<a href="/dojos/<%= @dojo.id%>" class="btn"><%= @dojo.branch%></a>
			<!-- | <a href="/dojos/<%= @dojo.id%>/edit" class="btn">Edit</a> | <a href="/dojos" class="btn">Back</a> -->
		</div>
	</div>
</div>
